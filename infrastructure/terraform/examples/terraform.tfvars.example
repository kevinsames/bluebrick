# Naming and location
environment  = "dev"
project      = "bluebrick"
location     = "West Europe"

# Tags
tags = {
  project        = "bluebrick"
  environment    = "dev"
  location       = "West Europe"
  owner          = "team-bluebrick@example.com"
  contact        = "platform-ops@example.com"
  cost_center    = "CC-12345"
  business_unit  = "DataEngineering"
  application    = "bluebrick"
  managed_by     = "platform-team"
  created_by     = "kevin"
  created_on     = "YYYY-MM-DD"
  lifecycle      = "development"
  compliance     = "non-prod"
}

# Workspace SKU
workspace_sku = "premium"

# Enable Diagnostic Settings + Log Analytics (optional)
enable_log_analytics       = true
log_analytics_retention_days = 30

# Databricks provider auth (optional for workspace-scoped resources)
enable_databricks = false
databricks_host   = "https://adb-xxxxxxxxxxxxxxxx.xx.azuredatabricks.net"
databricks_token  = "<pat>"
enable_instance_pool = false

# Unity Catalog example settings
enable_uc  = false
uc_catalog = "main"
uc_schema  = "bluebrick"

# Databricks Runtime for the sample cluster
dbr_version = "14.3.x-scala2.12"

# Hub-and-Spoke networking
enable_hub_spoke          = true
hub_address_space         = "10.0.0.0/16"
spoke_data_address_space  = "10.1.0.0/16"
spoke_dbx_address_space   = "10.2.0.0/16"
enable_vnet_injection     = true

# Multi-subscription: Hub subscription id (spoke uses ARM_SUBSCRIPTION_ID)
hub_subscription_id = "1e8dde29-2563-4bea-9b4f-1bddc6356e85"

# Azure Data Factory
enable_adf = true

# Optional: Link the env ADF to this GitHub repo for dev authoring
enable_adf_github   = false
github_account_name = "<org-or-user>"
github_repository_name = "bluebrick"
github_branch       = "main"
github_root_folder  = "data-factory"
